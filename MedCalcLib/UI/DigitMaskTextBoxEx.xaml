<UserControl x:Class="MedCalc.UI.DigitMaskTextBoxEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedCalc.UI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid VerticalAlignment="Center">
        <TextBox x:Name="LAYER_Watermark" Height="40" VerticalContentAlignment="Center" Focusable="False" BorderBrush="{x:Null}" IsEnabled="False">Watermark</TextBox>
        <TextBox x:Name="LAYER_Mask" Height="40" VerticalContentAlignment="Center" Focusable="False" Background="{x:Null}" BorderBrush="{x:Null}">Mask</TextBox>
        <TextBox x:Name="LAYER_Text" Height="40" VerticalContentAlignment="Center" Focusable="True" Background="{x:Null}">Text</TextBox>
    </Grid>
</UserControl>
