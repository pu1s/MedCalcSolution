<UserControl x:Class="MedCalc.UI.MultyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedCalc.UI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250" SnapsToDevicePixels="True">

    <Grid>
        <TextBox x:Name="L1">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="TextBox.Foreground" Value="#FF810A0A"/>
                    <Setter Property="Focusable" Value="False"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="TextBox.Foreground" Value="AliceBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
            <TextBox.Text>
                AAA
            </TextBox.Text>
        </TextBox>
    </Grid>
        
</UserControl>
