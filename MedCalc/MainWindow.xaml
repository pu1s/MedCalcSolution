<Window x:Class="MedCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedCalc"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" x:Name="MainMenuColumn" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="MainMenuStackPanel" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" >
            <Button x:Name="MainMenuMainButton" Height="30">
                
            </Button>
            <Button x:Name="IBMMenuMainButton" Height="30" Content="IBM">

            </Button>
        </StackPanel>
        <Grid x:Name="ContextGrid" Grid.Column="1">
            <Frame Source="/MedCalc;component/IndexBodyMassPage.xaml" NavigationUIVisibility="Hidden" ></Frame>
        </Grid>
    </Grid>
</Window>
